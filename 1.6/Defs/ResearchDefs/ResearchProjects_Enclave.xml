<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Enclave Research Projects __________-->

    <!-- Enclave Basic Equipment Research -->

    <ResearchProjectDef>
        <defName>FCP_Research_Enclave_Basic_Equipment</defName>
        <label>Enclave basic equipment</label>
        <description>Study captured Enclave equipment to understand their manufacturing techniques and replicate basic uniforms and equipment used by Enclave personnel.</description>
        <baseCost>1200</baseCost>
        <techLevel>Industrial</techLevel>
        <prerequisites>
            <li>ComplexClothing</li>
        </prerequisites>
        <requiredResearchBuilding>SimpleResearchBench</requiredResearchBuilding>
        <requiredResearchFacilities>
            <li>MultiAnalyzer</li>
        </requiredResearchFacilities>
        <researchViewX>5.00</researchViewX>
        <researchViewY>5.00</researchViewY>
        <tab>FCP_Faction_Research</tab>
    </ResearchProjectDef>

    <!-- Enclave Advanced Equipment Research -->

    <ResearchProjectDef>
        <defName>FCP_Research_Enclave_Advanced_Equipment</defName>
        <label>Enclave advanced equipment</label>
        <description>Advanced study of Enclave technology allows for the production of their sophisticated scientific equipment and combat armor with integrated systems.</description>
        <baseCost>2400</baseCost>
        <techLevel>Industrial</techLevel>
        <prerequisites>
            <li>FCP_Research_Enclave_Basic_Equipment</li>
            <li>PoweredArmor</li>
        </prerequisites>
        <requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
        <requiredResearchFacilities>
            <li>MultiAnalyzer</li>
        </requiredResearchFacilities>
        <researchViewX>5.00</researchViewX>
        <researchViewY>5.50</researchViewY>
        <tab>FCP_Faction_Research</tab>
    </ResearchProjectDef>

    <!-- Enclave Advanced Power Armor -->

    <ResearchProjectDef ParentName="FCP_Pre_War_Military_Research_Base">
        <defName>FCP_Research_Enclave_Advanced_Power_Armor</defName>
        <label>Holotape File: Enclave Advanced Power Armor</label>
