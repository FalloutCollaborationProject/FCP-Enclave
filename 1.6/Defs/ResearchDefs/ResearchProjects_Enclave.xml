        <baseCost>3500</baseCost>
        <techLevel>Spacer</techLevel>
        <heldByFactionCategoryTags>
            <li>FCP_Faction_Enclave</li>
        </heldByFactionCategoryTags>
        <prerequisites>
            <li>FCP_Research_Power_Armor_Training</li>
            <li>FCP_Research_Enclave_Advanced_Equipment</li>
        </prerequisites>
        <researchViewX>6.00</researchViewX>
        <researchViewY>5.50</researchViewY>
        <tab>FCP_Faction_Research</tab>
    </ResearchProjectDef>

