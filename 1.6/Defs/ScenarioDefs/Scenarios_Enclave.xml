<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Enclave Scenarios __________-->

    <ScenarioDef ParentName="ScenarioBase">
        <defName>FCP_Scenario_Enclave</defName>
        <label>The Enclave</label>
        <description>You are operatives of the Enclave, the shadow government of pre-war America. Armed with advanced technology and an unwavering belief in genetic superiority, you've been tasked with establishing a new outpost to further the Enclave's vision of a pure America. The wasteland is filled with mutants and degenerates - it is your duty to cleanse it.</description>
        <scenario>
            <summary>Enclave operatives establishing a new outpost with advanced technology.</summary>
            <playerFaction>
                <def>PlayerFaction</def>
                <factionDef>FCP_Faction_Enclave_Player</factionDef>
            </playerFaction>
            <parts>

                <!-- Config pages -->
                <li Class="ScenPart_ConfigPage_ConfigureStartingPawns_KindDefs">
                    <def>ConfigurePawnsKindDefs</def>
                    <pawnChoiceCount>8</pawnChoiceCount>
                    <leftBehindPawnKind>FCP_Pawnkind_Enclave_Trooper</leftBehindPawnKind>
                    <kindCounts>
                        <li>
                            <kindDef>FCP_Pawnkind_Enclave_Officer</kindDef>
                            <count>1</count>
                            <requiredAtStart>true</requiredAtStart>
                        </li>
                        <li>
                            <kindDef>FCP_Pawnkind_Enclave_Trooper</kindDef>
                            <count>2</count>
                            <requiredAtStart>false</requiredAtStart>
                        </li>
                        <li>
                            <kindDef>FCP_Pawnkind_Enclave_Armored_Trooper</kindDef>
                            <count>2</count>
                            <requiredAtStart>false</requiredAtStart>
                        </li>
                    </kindCounts>
                </li>

                <!-- Player starting stuff spawn method-->
                <li Class="FCP_Shuttles.ScenPart_PlayerPawnsArriveInShuttle">
                    <def>FCP_PlayerPawnsArriveInShuttle</def>
                </li>
                
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef>MealSurvivalPack</thingDef>
                    <count>30</count>
                </li>
                
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef>MedicineIndustrial</thingDef>
                    <count>30</count>
                </li>
                
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef>ComponentIndustrial</thingDef>
                    <count>30</count>
                </li>
                
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef>Steel</thingDef>
                    <count>450</count>
                </li>
                
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef>WoodLog</thingDef>
                    <count>300</count>
                </li>
                
                <!-- Advanced Enclave Equipment -->
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef MayRequire="Rick.FCP.EnergyWeapons">FCP_Gun_Plasma_Rifle</thingDef>
                    <count>6</count>
                </li>
                
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef MayRequire="Rick.FCP.EnergyWeapons">FCP_Gun_Plasma_Pistol</thingDef>
                    <count>1</count>
                </li>
                
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef>FCP_Apparel_Enclave_Officer_Coat</thingDef>
                    <count>1</count>
                </li>
                
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef>FCP_Apparel_Enclave_Scientist_Outfit</thingDef>
                    <count>1</count>
                </li>
                
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef>FCP_Apparel_Enclave_Trooper_Uniform</thingDef>
                    <count>1</count>
                </li>
                
                <!-- Combat Armor -->
                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef>FCP_Apparel_Enclave_Combat_Armor</thingDef>
                    <count>3</count>
                </li>

                <li Class="ScenPart_StartingThing_Defined">
                    <def>StartingThing_Defined</def>
                    <thingDef>FCP_Apparel_Enclave_Combat_Armor_Helmet</thingDef>
                    <count>3</count>
                </li>
                
                <!-- Research -->
                <li Class="ScenPart_StartingResearch">
                    <def>StartingResearch</def>
                    <project>Electricity</project>
                </li>
                
                <li Class="ScenPart_StartingResearch">
                    <def>StartingResearch</def>
                    <project>Batteries</project>
                </li>
                
                <li Class="ScenPart_StartingResearch">
                    <def>StartingResearch</def>
                    <project>FCP_Research_Enclave_Basic_Equipment</project>
                </li>
                
                <!-- Game conditions -->
                <li Class="ScenPart_GameStartDialog">
                    <def>GameStartDialog</def>
                    <text>Your Enclave team has landed in this remote area to establish a new outpost. With your advanced technology and pure American genetics, you must civilize this wasteland and eliminate the mutant threats that plague the region.\n\nRemember: America's future depends on genetic purity and technological superiority. The Enclave will rise again!</text>
                    <closeSound>GameStartSting</closeSound>
                </li>
                
            </parts>
        </scenario>
    </ScenarioDef>

</Defs>
