<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!--__________ Enclave Memes __________-->

    <MemeDef>
        <defName>FCP_Meme_EnclaveManifestDestiny</defName>
        <label>Enclave Manifest Destiny</label>
        <description>The Enclave represents the continuation of the United States government, destined to reclaim and restore America. Only pure, untainted humans have the right to rebuild civilization. All others are aberrations to be removed or subjugated.</description>
        <iconPath>Things/UI/Ideology/FCP_Enclave_Manifest Destiny</iconPath>
        <groupDef>Misc</groupDef>
        <impact>2</impact>
        <randomizationSelectionWeightFactor>0</randomizationSelectionWeightFactor>
        <hiddenInChooseMemes>true</hiddenInChooseMemes>
    </MemeDef>

    <!--__________ Precepts __________-->

    <PreceptDef>
        <defName>FCP_Precept_Role_EnclaveOfficer</defName>
        <issue>IdeoRole</issue>
        <label>Enclave Officer</label>
        <description>An elite officer of the Enclave, trained in leadership and advanced combat tactics. They excel at research, combat, and maintaining discipline.</description>
        <impact>High</impact>
        <displayOrderInImpact>100</displayOrderInImpact>
        <conflictingMemes>
            <li>Individualist</li>
        </conflictingMemes>
        <statFactors>
            <ResearchSpeed>1.25</ResearchSpeed>
            <ShootingAccuracyPawn>1.15</ShootingAccuracyPawn>
            <SocialImpact>1.20</SocialImpact>
        </statFactors>
        <associatedMemes>
            <li>FCP_Meme_EnclaveManifestDestiny</li>
        </associatedMemes>
        <roleRequiredWorkTags>
            <li>Intellectual</li>
            <li>Social</li>
        </roleRequiredWorkTags>
        <grantedAbilities>
            <li>LeaderSpeech</li>
        </grantedAbilities>
    </PreceptDef>

