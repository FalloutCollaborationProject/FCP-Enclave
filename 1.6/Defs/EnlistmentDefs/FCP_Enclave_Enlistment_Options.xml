<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Enlistments with Factions __________-->

    <!--_____ Enclave _____-->

    <FCP.Enlist.FactionEnlistOptionsDef>
        <defName>FCP_Enlistment_Enclave</defName>
        <minGoodwillRequrementToEnlist>10</minGoodwillRequrementToEnlist>
        <enlistGoodwillGain>5</enlistGoodwillGain>

        <!-- Enlistment Options -->

        <enlistLetterTitleKey>FCP_Enclave_Enlist_Letter_Title</enlistLetterTitleKey>
        <enlistLetterLabelKey>FCP_Enclave_Enlist_Letter_Label</enlistLetterLabelKey>
        <enlistButtonLabelKey>FCP_Enclave_Enlist_Button_Label</enlistButtonLabelKey>
        <enlistButtonDescKey>FCP_Enclave_Enlist_Button_Desc</enlistButtonDescKey>
        <enlistRequrementsNotSatisfiedKey>FCP_Enclave_Enlist_Requrements_Not_Satisfied</enlistRequrementsNotSatisfiedKey>
        <enlistedToHostileFactionKey>FCP_Enclave_Enlisted_To_Hostile_Faction</enlistedToHostileFactionKey>
        <enlistButtonIconTexPath>Things/UI/Enlisted/FCP_Enclave_Enlist</enlistButtonIconTexPath>
        <enlistedSoundDef>FCP_Sound_Card_Use</enlistedSoundDef>
        <enlistedWithKey>FCP_Enclave_Enlisted_With_Key</enlistedWithKey>

        <!-- Mission Options -->

        <missionsAreEnabled>true</missionsAreEnabled>
        <missionsLabelKey>FCP_Enclave_Missions_Label</missionsLabelKey>
        <missionsDescKey>FCP_Enclave_Missions_Desc</missionsDescKey>
        <missionsButtonIconTexPath>Things/UI/Enlisted/FCP_Enclave_Missions</missionsButtonIconTexPath>
        <missionsBackgroundMenuTexPath>Things/UI/Enlisted/FCP_Enclave_Missions</missionsBackgroundMenuTexPath>
        <missionsMenuDescriptionKey>FCP_Enclave_Menu_Missions_Desc</missionsMenuDescriptionKey>
        <missionsMenuSelectQuestKey>FCP_Enclave_Menu_Missions_Select_Quest</missionsMenuSelectQuestKey>
        <missionsMenuStartQuestKey>FCP_Enclave_Menu_Missions_Start_Quest</missionsMenuStartQuestKey>
        <missionsQuestCost>50</missionsQuestCost>
        <missionsMenuStartQuestNoEnoughMoneyKey>FCP_Enclave_Not_Enough_Money</missionsMenuStartQuestNoEnoughMoneyKey>

        <!-- Salary Options -->

        <salaryIsEnabled>true</salaryIsEnabled>
        <salaryDef>FCP_Currency_Enclave_Platinum_Bullion</salaryDef>
        <salaryLabelKey>FCP_Enclave_Salary_Label</salaryLabelKey>
        <salaryDescKey>FCP_Enclave_Salary_Desc</salaryDescKey>
        <salaryButtonIconTexPath>Things/Items/Currencies/FCP_Enclave_Currency/FCP_Enclave_Bullion</salaryButtonIconTexPath>
        <salaryRange>320~420</salaryRange>
        <salaryPeriodDays>14</salaryPeriodDays>

        <!-- Provision Options -->

        <provisionOptions>
            <li>
                <provisionsLabelKey>FCP_Enclave_Provisions_Label</provisionsLabelKey>
                <provisionsDescKey>FCP_Enclave_Provisions_Desc</provisionsDescKey>
                <provisionsButtonIconTexPath>Things/Items/Enclave_Crates/FCP_Enclave_Crate</provisionsButtonIconTexPath>
                <provisions>
                    <li>
                        <thing>FCP_Item_Enclave_Tech_Crate</thing>
                        <amountRange>6</amountRange>
                    </li>
                </provisions>
                <provisionsRestockInDays>10</provisionsRestockInDays>
            </li>
            <li>
                <provisionsLabelKey>FCP_Enclave_Provisions_Label_Standard_Issue</provisionsLabelKey>
                <provisionsDescKey>FCP_Enclave_Provisions_Desc_Standard_Issue</provisionsDescKey>
                <provisionsButtonIconTexPath>Things/UI/Enlisted/FCP_Enclave_Standard_Issue</provisionsButtonIconTexPath>
                <provisions>
                    <li>
                        <thing>FCP_Item_Enclave_Standard_Weapon_Crate</thing>
                        <amountRange>2</amountRange>
                    </li>
                    <li>
                        <thing>FCP_Item_Enclave_Standard_Uniform_Crate</thing>
                        <amountRange>2</amountRange>
                    </li>
                </provisions>
                <provisionsRestockInDays>30</provisionsRestockInDays>
            </li>
        </provisionOptions>

        <!-- Storage Options -->

        <storageIsEnabled>true</storageIsEnabled>
        <storageLabelKey>FCP_Enclave_Storage_Label</storageLabelKey>
        <storageDescKey>FCP_Enclave_Storage_Desc</storageDescKey>
        <storageButtonIconTexPath>Things/UI/Enlisted/FCP_Enclave_Storage</storageButtonIconTexPath>

        <!-- Work Options -->

        <recreationGainPerTick>0.0001</recreationGainPerTick>
        <workOptions>
            <li>
                <workLabelKey>FCP_Enclave_Hospital_Label</workLabelKey>
                <workDescKey>FCP_Enclave_Hospital_Desc</workDescKey>
                <workButtonIconTexPath>Things/UI/Enlisted/FCP_Enclave_Hospital</workButtonIconTexPath>
                <additionalRestFall>0.25</additionalRestFall>
                <tendCaravanMembersEveryTicks>600</tendCaravanMembersEveryTicks>
                <medicinesToTend>
                    <li>MedicineIndustrial</li>
                </medicinesToTend>
                <immunityGainSpeedMultiplier>2</immunityGainSpeedMultiplier>
            </li>
            <li>
                <workLabelKey>FCP_Enclave_Intellectual_Training_Label</workLabelKey>
                <workDescKey>FCP_Enclave_Intellectual_Training_Desc</workDescKey>
                <workButtonIconTexPath>Things/UI/Enlisted/FCP_Enclave_Training_Intellectual</workButtonIconTexPath>
                <experienceGainsPerHour>
                    <Intellectual>500</Intellectual>
                </experienceGainsPerHour>
                <additionalRestFall>0.25</additionalRestFall>
            </li>
            <li>
                <workLabelKey>FCP_Enclave_Shooting_Training_Label</workLabelKey>
                <workDescKey>FCP_Enclave_Shooting_Training_Desc</workDescKey>
                <workButtonIconTexPath>Things/UI/Enlisted/FCP_Enclave_Training_Combat</workButtonIconTexPath>
                <experienceGainsPerHour>
                    <Shooting>500</Shooting>
                </experienceGainsPerHour>
                <additionalRestFall>0.3</additionalRestFall>
            </li>
        </workOptions>

        <!-- Drop Pod Options -->

        <dropPodServiceIsEnabled>false</dropPodServiceIsEnabled>

        <!-- Resign Options -->

        <resignGoodwillGain>-25</resignGoodwillGain>
        <resignMenuTextKey>FCP_Enclave_Resign_Menu_Text</resignMenuTextKey>
        <resignLetterTitleKey>FCP_Enclave_Resign_Letter_Title</resignLetterTitleKey>
        <resignLetterLabelKey>FCP_Enclave_Resign_Letter_Label</resignLetterLabelKey>
        <resignButtonLabelKey>FCP_Enclave_Resign_Button_Label</resignButtonLabelKey>
        <resignButtonDescKey>FCP_Enclave_Resign_Button_Desc</resignButtonDescKey>
        <resignButtonIconTexPath>Things/UI/Enlisted/FCP_Enclave_Resign</resignButtonIconTexPath>

        <!-- Kicked Out Options -->

        <kickOutLetterTitleKey>FCP_Enclave_Kick_Out_Letter_Title</kickOutLetterTitleKey>
        <kickOutLetterLabelKey>FCP_Enclave_Kick_Out_Label_Title</kickOutLetterLabelKey>

        <!-- Reinforcements Options -->

        <reinforcementsAreEnabled>true</reinforcementsAreEnabled>
        <reinforcementsButtonLabelKey>FCP_Enclave_Reinforcements_Button_Label</reinforcementsButtonLabelKey>
        <reinforcementsButtonDescKey>FCP_Enclave_Reinforcements_Button_Desc</reinforcementsButtonDescKey>
        <reinforcementsButtonIconTexPath>Things/UI/Enlisted/FCP_Enclave_Call_Reinforcements</reinforcementsButtonIconTexPath>
        <reinforcementCallGoodwillCost>-5</reinforcementCallGoodwillCost>
        <reinforcementCallCooldownTicks>50000</reinforcementCallCooldownTicks>
        <reinforcementOptions>
            <li>
                <relationsRange>75~100</relationsRange>
                <pointsRange>800~1800</pointsRange>
            </li>
            <li>
                <relationsRange>50~74</relationsRange>
                <pointsRange>600~850</pointsRange>
            </li>
            <li>
                <relationsRange>26~49</relationsRange>
                <pointsRange>400~600</pointsRange>
            </li>
            <li>
                <relationsRange>-100~25</relationsRange>
                <pointsRange>100~200</pointsRange>
            </li>
        </reinforcementOptions>

    </FCP.Enlist.FactionEnlistOptionsDef>

</Defs>