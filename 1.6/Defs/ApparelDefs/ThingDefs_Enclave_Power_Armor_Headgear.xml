    <!-- Advanced Power Armor Helmet -->

    <ThingDef ParentName="FCP_Apparel_Power_Armor_Helmet_Base" MayRequire="Rick.FCP.PowerArmor">
        <defName>FCP_Apparel_Enclave_Advanced_Power_Armor_Helmet</defName>
        <label>Enclave Advanced Power Armor Helmet</label>
        <description>An advanced helmet designed for Enclave soldiers, offering exceptional protection against ballistic, blunt, and heat damage. Equipped with integrated systems for toxic environment resistance.</description>
        <generateCommonality>0.001</generateCommonality>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Things/Apparel/Enclave_Power_Armor/Enclave_Power_Armor/FCP_Advanced_Power_Armor_Helmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <smeltable>false</smeltable>
        <statBases>
            <MaxHitPoints>85</MaxHitPoints>
            <Mass>0.8</Mass>
            <MarketValue>1200</MarketValue>
            <ArmorRating_Sharp>3.60</ArmorRating_Sharp>
            <ArmorRating_Blunt>3.40</ArmorRating_Blunt>
            <ArmorRating_Heat>3.20</ArmorRating_Heat>
            <Insulation_Heat>3</Insulation_Heat>
            <EquipDelay>2.5</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <ToxicEnvironmentResistance>0.9</ToxicEnvironmentResistance>
            <MoveSpeed>-0.3</MoveSpeed>
            <AimingDelayFactor>-0.02</AimingDelayFactor>
            <SocialImpact>0.00</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
                <li>FullHead</li>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Enclave_Power_Armor/Enclave_Power_Armor/FCP_Advanced_Power_Armor_Helmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <tags>
                <li>FCP_Enclave_Advanced_Power_Armor</li>
            </tags>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
            <developmentalStageFilter>Adult</developmentalStageFilter>
        </apparel>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
            <li Class="RangerRick_PowerArmor.CompProperties_ApparelRequirement">
                <requiredApparels>
                    <li>FCP_Apparel_Power_Armor_Frame</li>
                </requiredApparels>
            </li>
        </comps>
    </ThingDef>

