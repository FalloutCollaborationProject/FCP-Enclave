<?xml version="1.0" encoding="UTF-8"?>  

<Defs>

<!--__________ Power Armor Helmets __________-->

	<ThingDef ParentName="HatBase" Name="FCP_Apparel_Power_Armor_Helmet_Base" Abstract="true">
		<apparel>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
			<canBeGeneratedToSatisfyVacuumResistance>false</canBeGeneratedToSatisfyVacuumResistance>
			<canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
		</apparel>
	</ThingDef>

    <!-- Advanced Power Armor Helmet -->
	
    <ThingDef ParentName="FCP_Apparel_Power_Armor_Helmet_Base" MayRequire="Rick.FCP.PowerArmor">
        <defName>FCP_Apparel_Enclave_Advanced_Power_Armor_Helmet</defName>
        <label>Enclave Advanced Power Armor Helmet</label>
        <description>PLACEHOLDER</description>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Things/Apparel/Enclave_Power_Armor/Enclave_Power_Armor/FCP_Advanced_Power_Armor_Helmet</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <smeltable>false</smeltable>
        <statBases>
            <MaxHitPoints>80</MaxHitPoints>
            <Mass>0.8</Mass>
            <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
            <ArmorRating_Blunt>1.00</ArmorRating_Blunt>
            <ArmorRating_Heat>0.80</ArmorRating_Heat>
            <Insulation_Heat>2</Insulation_Heat>
            <EquipDelay>3</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <ToxicEnvironmentResistance>0.8</ToxicEnvironmentResistance>            <!-- Good, but not perfect -->
            <MoveSpeed>-0.5</MoveSpeed>            <!-- Bulky -->
            <AimingDelayFactor>-0.01</AimingDelayFactor>
            <SocialImpact>-0.05</SocialImpact>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
                <li>FullHead</li>
                <li>FullHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Enclave_Power_Armor/Enclave_Power_Armor/FCP_Advanced_Power_Armor_Helmet</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
            <useDeflectMetalEffect>true</useDeflectMetalEffect>
            <developmentalStageFilter>Adult</developmentalStageFilter>
        </apparel>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
            <li Class="RangerRick_PowerArmor.CompProperties_ApparelRequirement">
                <requiredApparels>
                    <li>FCP_Apparel_Power_Armor_Frame</li>
                </requiredApparels>
            </li>
        </comps>
    </ThingDef>

