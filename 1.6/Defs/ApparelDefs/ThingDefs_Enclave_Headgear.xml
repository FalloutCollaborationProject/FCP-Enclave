    <!-- _Enclave Headgear_ -->

    <!-- Enclave Officer Cap -->

    <ThingDef ParentName="HatBase">
        <defName>FCP_Apparel_Enclave_Officer_Cap</defName>
        <label>Enclave Officer Cap</label>
        <description>A distinguished cap worn by Enclave officers, symbolizing authority and discipline. Made from high-quality materials, it offers moderate protection and a professional appearance.</description>
        <techLevel>Industrial</techLevel>
        <graphicData>
            <texPath>Things/Apparel/Enclave_Headgear/Officers/FCP_Enclave_Officer_Cap</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <smeltable>false</smeltable>
        <statBases>
            <WorkToMake>3000</WorkToMake>
            <MaxHitPoints>80</MaxHitPoints>
            <Mass>0.8</Mass>
            <ArmorRating_Sharp>0.13</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.07</ArmorRating_Blunt>
            <Insulation_Heat>2</Insulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>UpperHead</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Enclave_Headgear/Officers/FCP_Enclave_Officer_Cap</wornGraphicPath>
            <layers>
                <li>Overhead</li>
            </layers>
        </apparel>
    </ThingDef>

