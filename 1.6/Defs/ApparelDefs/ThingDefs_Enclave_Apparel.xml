    <!--_____ Scientist Apparel _____-->

    <!-- Scientist Outfit -->

    <ThingDef ParentName="ApparelMakeableBase">
        <defName>FCP_Apparel_Enclave_Scientist_Outfit</defName>
        <label>Enclave Scientist Outfit</label>
        <description>A suit commonly worn by the Enclave's scientists, especially when working in the hazardous wasteland. It's a fully enclosed white suit with special polymers woven into it and a helmet with an orange visor made from plexiglass. It comes with a built-in computer system and various scientific instruments to support all manners of intellectual pursuits.</description>
        <recipeMaker>
            <researchPrerequisite>FCP_Research_Enclave_Advanced_Equipment</researchPrerequisite>
            <skillRequirements>
                <Crafting>8</Crafting>
            </skillRequirements>
            <recipeUsers>
                <li>FCP_Production_Tailoring_Workbench</li>
            </recipeUsers>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
        </recipeMaker>
        <graphicData>
            <texPath>Things/Apparel/Enclave_Apparel/Scientist_Outfit/FCP_Enclave_Scientist_Outfit</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>0.90</drawSize>
        </graphicData>
        <techLevel>Industrial</techLevel>
        <costList>
            <Cloth>180</Cloth>
            <Synthread>40</Synthread>
        </costList>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <WorkToMake>28000</WorkToMake>
            <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.15</ArmorRating_Blunt>
            <ArmorRating_Heat>0.30</ArmorRating_Heat>
            <Mass>1.5</Mass>
            <Insulation_Cold>8.0</Insulation_Cold>
            <Insulation_Heat>12.0</Insulation_Heat>
            <EquipDelay>4</EquipDelay>
        </statBases>
        <equippedStatOffsets>
            <HackingSpeed>0.10</HackingSpeed>
        </equippedStatOffsets>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Things/Apparel/Enclave_Apparel/Scientist_Outfit/FCP_Enclave_Scientist_Outfit</wornGraphicPath>
            <layers>
                <li>OnSkin</li>
            </layers>
            <tags>
                <li>FCP_Enclave_Apparel</li>
            </tags>
            <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
        </apparel>
        <tradeTags>
            <li>FCP_Trade_Tag_Enclave_Apparel</li>
        </tradeTags>
        <comps>
            <li Class="FCP.Core.CompProperties_LabelColored">
                <rarity>Rare</rarity>
            </li>
        </comps>
    </ThingDef>

