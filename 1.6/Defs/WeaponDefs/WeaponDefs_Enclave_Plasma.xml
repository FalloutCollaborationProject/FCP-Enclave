        <graphicData>
            <texPath>Things/Items/Weapons/FCP_Enclave_Plasma_SMG</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>FCP_Sound_Interact_Plasma_Pistol</soundInteract>
        <statBases>
            <WorkToMake>65000</WorkToMake>
            <Mass>3.8</Mass>
            <AccuracyTouch>0.88</AccuracyTouch>
            <AccuracyShort>0.80</AccuracyShort>
            <AccuracyMedium>0.55</AccuracyMedium>
            <AccuracyLong>0.35</AccuracyLong>
            <RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
        </statBases>
        <recipeMaker>
            <researchPrerequisite>FCP_Research_Enclave_Advanced_Plasma_Weapons</researchPrerequisite>
            <skillRequirements>
                <Crafting>9</Crafting>
            </skillRequirements>
            <recipeUsers Inherit="False">
                <li>FCP_Production_Complex_Weapons_Workbench</li>
            </recipeUsers>
        </recipeMaker>
        <costList>
            <Plasteel>30</Plasteel>
            <ComponentSpacer>3</ComponentSpacer>
            <ComponentIndustrial>2</ComponentIndustrial>
        </costList>
